import time
from win10toast import ToastNotifier
import datetime

name = input("What is your name? ")
def getTimeInput():
    hour = int(input("Hours of interval :"))
    minutes = int(input("Minutes of interval :"))
    seconds = int(input("Seconds of interval :"))
    time_interval = seconds + (minutes * 60) + (hour * 3600)
    return time_interval


def log():
    now = datetime.datetime.now()
    start_time = now.strftime("%H:%M:%S")
    with open("log.txt", 'a') as f:
        f.write(f"You drank water {now} \n")
    return 0


def notify():
    notification = ToastNotifier()
    notification.show_toast("Time to drink water", "Hello " + name + " I am Waterify!:)\nIts your time to drink Water!!\nRead More...",
                            duration=4,
                            icon_path="https://raw.githubusercontent.com/vaishnavi-3969/Drink-Water-Notifications/main/Elegantthemes-Beautiful-Flat-Water.ico")
    log()
    return 0


def starttime(time_interval):
    while True:
        time.sleep(time_interval)
        notify()


if __name__ == '__main__':
    time_interval = getTimeInput()
    starttime(time_interval)
